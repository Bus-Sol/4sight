<odoo>
    <data>
        <record id="account_analytic_line_grid_inherits" model="ir.ui.view">
            <field name="name">account.analytic.line.grid.inherits</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="timesheet_grid.timesheet_view_grid"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_amount']" position="replace">
                    <field name="unit_amount" type="measure"/>
                </xpath>
            </field>
        </record>

        <record id="account_analytic_line_tree_inherits" model="ir.ui.view">
            <field name="name">account.analytic.line.tree.inherits</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_amount']" position="replace">
                    <field name="unit_amount" optional="show" sum="Total" decoration-danger="unit_amount &gt; 24 or unit_amount &lt; 0"/>
                </xpath>
            </field>
        </record>

        <record id="br_partner_tax_fields_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="x_timesheets_rounding" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>