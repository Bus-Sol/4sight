<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.inherit.add.lines</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="edit_amount"/>
            </field>
            <xpath expr="//group[@name='group2']/div[@name='amount_div']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','|', ('can_edit_wizard', '=', False),('edit_amount', '=', True),'&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='group2']/label[@for='amount']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','|', ('can_edit_wizard', '=', False),('edit_amount', '=', True),'&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='group2']/field[@name='communication']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','|', ('can_edit_wizard', '=', False),('edit_amount', '=', True),'&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='group2']/field[@name='communication']" position="after">
                <field name="post_payment"/>
            </xpath>
            <xpath expr="//group[@name='group1']/field[@name='group_payment']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('can_group_payments', '=', False),('edit_amount', '=', True)]}</attribute>
            </xpath>


            <xpath expr="//group" position="after">
                        <field name="invoice_line_ids" attrs="{'invisible': [('edit_amount', '=', False)]}">
                            <tree editable="bottom" create="false" delete="false" mode="tree">
                                <field name="date" readonly="1"/>
                                <field name="name"/>
                                <field name="amount" widget="monetary"/>
                                <field name="previous_amount" widget="monetary" invisible="1"/>
                                <field name="ref_move_copy" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_left" colspan="4" attrs="{'invisible': [('edit_amount', '=', False)]}">
                            <field name="amount_total" widget="monetary"/>
                        </group>
            </xpath>
        </field>
    </record>

</odoo>