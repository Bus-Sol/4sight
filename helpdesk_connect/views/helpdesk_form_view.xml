<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_form_view_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <field name="email_cc" position="after">
                <field name="phone"/>
                <field name="company_name"/>
            </field>
        </field>
    </record>


    <record id="helpdesk_ticket_tree_view_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <field name="ticket_ref" position="before">
                <field name="create_date" widget="date" options="{'format': 'dd/MM/yyyy'}"/>
            </field>
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">create_date desc</attribute>
            </xpath>
        </field>
    </record>
</odoo>