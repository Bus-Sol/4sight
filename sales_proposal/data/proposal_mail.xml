<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sale_proposal_email_template" model="mail.template">
            <field name="name">Sales Proposal: Send By Email</field>
            <field name="model_id" ref="sales_proposal.model_proposal_proposal"/>
            <field name="subject">Sale Proposal (Ref: {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.sale_id.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-if="object.sale_id.partner_id"><t t-out="object.sale_id.partner_id.name"/></t>,
                        <br/><br/>
<!--                        In the enclosure to this mail please find sale proposal document.-->
                        We have attached a sale proposal document.
                        <br/><br/>
                        If you have any questions or concerns regarding this sale proposal, please donâ€™t hesitate to contact us.
                    </p>
                    <br/>
                    <p>
                        Regards,
                        <br/><br/>
                        <t t-if="object.create_uid">
                        <t t-out="object.create_uid.name"/>
                        </t>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="sales_proposal.action_report_proposal"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }}</field>
            <field name="lang">{{}}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>