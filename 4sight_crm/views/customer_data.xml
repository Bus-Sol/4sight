<?xml version="1.0"?>
<odoo>

    <record id="crm_customer_data_view_form" model="ir.ui.view">
        <field name="name">crm.lead.customer.form</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="is_domestic_transfers"/>
                            <field name="is_mutual_funds"/>
                            <field name="is_crossborder_incom_trans"/>
                            <field name="is_crossborder_outward_trans"/>
                            <field name="is_outward_domestic_trans"/>
                            <field name="is_stocks"/>
                            <field name="is_credit_card"/>
                            <field name="inward_transfers"/>
                        </group>
                        <group>
                            <field name="outward_transfers"/>
                            <field name="is_business_activity"/>
                            <field name="is_investment_activity"/>
                            <field name="is_salary_pension"/>
                            <field name="is_earnings_sop"/>
                            <field name="is_earnings_sob"/>
                            <field name="is_earnings_soi"/>
                            <field name="is_inheritance"/>
                            <field name="is_divorce_settlement"/>
                            <field name="is_insurance_proceeds_settlement"/>
                            <field name="is_winning_ngl"/>
                            <field name="is_winning_gl"/>
                            <field name="ba_line_of_bd"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_customer_data_view_tree" model="ir.ui.view">
        <field name="name">crm.lead.customer.tree</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <tree string="Customer Data">
                <field name="name"/>
                <field name="first_name"/>
                <field name="father_name"/>
                <field name="surname"/>
                <field name="dob"/>
                <field name="place_of_birth"/>
                <field name="country_birth"/>
                <field name="citizenship"/>
                <field name="martial_status" optional="hide"/>
                <field name="educational_level" optional="hide"/>
                <field name="flat_num" optional="hide"/>
                <field name="house_name" optional="hide"/>
                <field name="street" optional="hide"/>
                <field name="street_number" optional="hide"/>
                <field name="postal_code" optional="hide"/>
                <field name="district" optional="hide"/>
                <field name="city_town" optional="hide"/>
                <field name="country" optional="hide"/>
                <field name="flat_num_2" optional="hide"/>
                <field name="house_name_2" optional="hide"/>
                <field name="street_2" optional="hide"/>
                <field name="street_number_2" optional="hide"/>
                <field name="postal_code_2" optional="hide"/>
                <field name="district_2" optional="hide"/>
                <field name="city_town_2" optional="hide"/>
                <field name="country_2" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="crm_customer_data_action" model="ir.actions.act_window">
        <field name="name">Customer Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_customer_data_view_tree')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('crm_customer_data_view_form')})]"/>
    </record>

    <menuitem
            id="crm_menu_customer_data"
            name="Customer Data"
            parent="crm.crm_menu_root"
            action="crm_customer_data_action"
            sequence="3"/>
</odoo>
