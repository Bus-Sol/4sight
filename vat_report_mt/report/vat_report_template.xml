<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="vat_template">
            <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
            <html>
                <head>
                    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
                    <t t-call-assets="account_reports.assets_financial_report" t-js="False"/>
                    <t t-call-assets="web.assets_common"/>
                    <!--<t t-call-assets="web.assets_backend"/>-->
                </head>
                <div class="o_account_reports_page o_account_reports_no_print">
                    <div class="container " style="background-color: #eee;">
                        <div class="row mt32 mb32">
                            <div class="col-12 text-center">
                                <h2 style="color: black;">VAT Report</h2>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="row mt32 mb32">

                            <div class="col-4 text-center">
                                <h5>4Sight Group</h5>
                            </div>
                            <div class="col-4 text-center">
                                <h5>Date of print:
                                    <t t-esc="datetime.datetime.now().strftime('%d/%m/%Y')"/>
                                </h5>
                            </div>
                            <div class="offset-1 col-3 text-center">
                                <h5 class="text-center">Other Info</h5>
                                <t t-if="lines.get('other_info')">
                                    <t t-set="info" t-value="lines.get('other_info')"/>
                                    <ul>
                                        <li>
                                            <t t-if="info.get('state')">
                                                <t t-if="info['state'] == 'posted'">Posted Entries Only</t>
                                            </t>
                                            <t t-else="">With Draft Entries</t>
                                        </li>
                                        <t t-if="info.get('date_start')">
                                            <li>
                                                <t t-if="info['date_start']">Date from
                                                    <t t-esc="info['date_start']"/>
                                                </t>
                                            </li>
                                        </t>
                                        <t t-if="info.get('date_end')">
                                            <li>
                                                <t t-if="info['date_end']">Until
                                                    <t t-esc="info['date_end']"/>
                                                </t>

                                            </li>
                                        </t>
                                    </ul>
                                </t>
                            </div>
                            <br/>
                            <br/>
                        </div>
                    </div>
                    <br/>
                    <div class="">
                        <table class="o_account_reports_table">
                            <thead class="">
                                <tr>
                                    <t t-foreach="lines.get('columns_header')" t-as="header_line">
                                        <th class="" style="padding-right: -45px;border: 1px solid black;">
                                            <t t-esc="header_line" style=""/>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="lines.get('lines')">
                                    <t t-foreach="lines['lines']" t-as="line">
                                        <tr class="" t-att-style="'color:black;font-weight: bold;' if (line[0]) else ''">
                                            <t t-set="i" t-value="0"/>
                                            <t t-foreach="line" t-as="l">
                                                <td t-att-class="'text-left' if i==4 else 'text-center'" t-att-style="'padding-left: 25px;border-bottom: 2px solid black;' if (line[0]) else 'padding-left: 25px;border-bottom: 1px solid black;font-size:12px;'">
                                                    <t t-if="l and i==4">
                                                        <t t-esc="l[:120]"/>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-esc="l"/>
                                                    </t>
                                                </td>
                                                <t t-set="i" t-value="i+1"/>
                                            </t>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </html>


        </template>
    </data>
</odoo>