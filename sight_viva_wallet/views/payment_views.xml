<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_viva" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'viva')]}">
                    <field name="viva_secret_key" attrs="{'required':[ ('provider', '=', 'viva'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="viva_publishable_key" attrs="{'required':[ ('provider', '=', 'viva'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="viva_client_id" attrs="{'required':[ ('provider', '=', 'viva'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="viva_client_secret" attrs="{'required':[ ('provider', '=', 'viva'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
            <xpath expr='//group[@name="acquirer_config"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'viva')]}">
                    <field name="viva_image_url"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
