<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_journal_dashboard_kanban_view_inherit_add_sync" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='bank_journal_cta']" position="after">
                <t t-value="record.id.raw_value" t-set="journal_id"/>
                <div t-if="journal_id==43" name="viva_journal_auto_sync" class="mt-3 mt-sm-0">
                    <div name="bank_statement_sync_button" groups="account.group_account_invoice">
                        <a type="object" name="auto_create_bank_statement" class="oe_inline">Sync</a>
                        <span name="button_import_placeholder"/>
                        Statements
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
