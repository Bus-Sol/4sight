<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_account_move_line_filter_group_by" model="ir.ui.view">
        <field name="name">account.move.line.search</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group/filter[@name='journal']" position="after">
                <filter string="VAT" name="tax_line_group" context="{'group_by':'vat_line_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_tax_audit_tree" model="ir.ui.view">
        <field name="name">account.move.line.tax.tree</field>
        <field name="model">account.move.line</field>

        <field name="arch" type="xml">
            <tree string="VAT Report" create="false" edit="false">
                <field name="date" optional="show"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="journal_id" options='{"no_open":True}'/>
                <field name="move_id" optional="show"/>
                <field name="account_id" options="{'no_open': True}" groups="account.group_account_user"/>
                <field name="partner_id" optional="show"/>
                <field name="statement_id" invisible="1"/>
                <field name="ref" optional="show"/>
                <field name="name" optional="show"/>
                <field name="tax_ids" widget="many2many_tags" width="0.5" optional="show"/>
                <field name="net_value" sum="Total Net Value"/>
                <field name="tax_value" sum="Total  Tax Value"/>
                <field name="gross_value" sum="Total Gross Value"/>
                <field name="account_group" invisible="1"/>
                <field name="amount_currency" groups="base.group_multi_currency" optional="hide"/>
                <field name="tax_tag_ids" widget="many2many_tags" width="0.5" optional="hide"/>
                <field name="currency_id" readonly="1" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="parent_state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_move_line_form_add_group_account_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form.add.group</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="move_id" position="after">
                <field name="account_group" invisble="1"/>
            </field>
        </field>
    </record>


    <record id="action_account_vat_report" model="ir.actions.act_window">
        <field name="name">VAT Transaction Report</field>
        <field name="res_model">account.move.line</field>
        <field name="context">{'search_default_tax_line_group': 1,'search_default_posted':1, 'expand': 1}</field>
        <field name="domain">[('vat_line_id', '!=', False)]</field>
        <field name="view_id" ref="view_move_line_tax_audit_tree"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_action_account_vat_report" name="VAT Transaction Report"
              action="action_account_vat_report"
              parent="account_reports.account_reports_audit_reports_menu" sequence="12"/>

    <record id="view_move_account_add_vat_form" model="ir.ui.view">
        <field name="name">move.account.add.vat.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']//field[@name='tax_tag_ids']" position="after">
                <field name="vat_line_id" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="mt_view_account_form" model="ir.ui.view">
        <field name="name">account.account.form.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="mt_group_id"/>
            </field>
        </field>
    </record>

    <record id="mt_view_account_list" model="ir.ui.view">
        <field name="name">account.account.tree.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="mt_group_id"/>
            </field>
        </field>
    </record>

</odoo>