<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_line_tax_audit_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tax.audit.tree.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tax_audit_tree"/>
        <field name="arch" type="xml">
            <field name="tax_base_amount" position="replace">
                <field name="net_value" sum="Total Net Value"/>
                <field name="tax_value" sum="Total  Tax Value"/>
                <field name="gross_value" sum="Total Gross Value"/>
                <field name="account_group"/>
            </field>
            <field name="tax_audit" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="view_move_line_form_add_group_account_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form.add.group</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="move_id" position="after">
                <field name="account_group" invisble="1"/>
            </field>
        </field>
    </record>

    <act_window
            id="account.action_move_line_select_tax_audit"
            name="Journal Items for Tax Audit"
            domain="[('account_group','=', '007')]"
            context="{'search_default_account_id': [active_id],'default_account_group': '007'}"
            res_model="account.move.line"
            view_id="account.view_move_line_tax_audit_tree"/>
</odoo>