<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_jobsheet" model="mail.template">
            <field name="name">Jobsheet: Send by email</field>
            <field name="model_id" ref="odoo_timestead.model_client_jobsheet"/>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="subject">Jobsheet to Confirm Ref {{ object.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        -- This is an automated email message. Please do not reply to this email address.
                        <br/>
                        <br/>
                        <div class="container">
                            <div class="row" style="display: block !important;">
                                <div class="col-10"
                                     style="font-size: 20px;background-color: rgb(42, 50, 69);color:white;padding: 10px;">
                                    <p>JOBSHEET</p>
                                </div>
                                <div class="col-10">
                                    <br/>
                                    <br/>
                                    Dear
                                    <t t-if="object.partner_id.parent_id">
                                        <t t-out="object.partner_id.name"/> (<t t-out="object.partner_id.parent_id.name"/>),
                                    </t>
                                    <t t-else="">
                                        <t t-out="object.partner_id.name or ''"/>,
                                    </t>
                                    <br/>
                                    <br/>
                                    Please confirm jobsheet Ref: <t t-out="object.id or ''"/>, dated <t t-out="object.date_order or ''"/>.
                                    Kindly click on the link below to review
                                    your jobsheet and sign in the provided field. Click confirm to approve.
                                    <br/>
                                    from <t t-out="object.create_uid.name or ''"/>.
                                    <br/>
                                    <br/>
                                    Do not hesitate to contact us if you have any questions.
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="odoo_timestead.client_jobsheets"/>
            <field name="report_name">{{ object.name }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
