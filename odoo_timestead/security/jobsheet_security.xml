<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_jobsheet">
            <field name="name">Jobshseets</field>
            <field name="description">Helps you handle jobsheet editing.</field>
            <field name="sequence">14</field>
        </record>

        <record id="group_jobsheet_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_jobsheet"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_jobsheet_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_jobsheet_user'))]"/>
            <field name="category_id" ref="module_category_jobsheet"/>
        </record>

        <record id="group_jobsheet_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[(4, ref('group_jobsheet_manager'))]"/>
            <field name="category_id" ref="module_category_jobsheet"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="jobsheet_rule_prevent_edit_after_sign" model="ir.rule">
            <field name="name">Prevent edit Doc after Sign for simple users</field>
            <field name="model_id" ref="model_client_jobsheet"/>
            <field name="domain_force">[("status","=", "created")]</field>
            <field name="groups" eval="[(4, ref('group_jobsheet_user')), (4, ref('group_jobsheet_manager'))]"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="0"/>
        </record>

        <record id="jobsheet_rule_access_edit_after_sign" model="ir.rule">
            <field name="name">Access edit Doc after Sign for simple users</field>
            <field name="model_id" ref="model_client_jobsheet"/>
            <field name="domain_force">[(1,"=", 1)]</field>
            <field name="groups" eval="[(4, ref('group_jobsheet_admin'))]"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
        </record>
    </data>

</odoo>
