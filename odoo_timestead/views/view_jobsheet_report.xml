<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_report_jobsheet" model="ir.ui.view">
        <field name="name">client.jobsheet.report.tree</field>
        <field name="model">client.jobsheet</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="create_date" widget="date" optional="show"/>
                <field name="jobsheet_start"/>
                <field name="start_date" />
                <field name="end_date" />
                <field name="hours_overtime" widget="timesheet_uom" string="Overtime hours"/>
                <field name="user_id" string="Technican" optional="hide"/>
                <field name="partner_id"/>
                <field name="task_id" optional="hide"/>
                <field name="name" string="Jobsheet Number"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_report_jobsheets" model="ir.actions.act_window">
        <field name="name">Jobsheets Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">client.jobsheet</field>
        <field name="view_id" ref="view_report_jobsheet"/>
        <field name="domain">[('overtime', '=', True)]</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Jobsheet with overtime, yet.
            </p>
        </field>
    </record>

    <record id="view_report_oob_jobsheet_filter" model="ir.ui.view">
        <field name="name">project.task.list.oob</field>
        <field name="model">project.task</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search Customer">
                <field name="name"/>
                <group expand="1" string="Group By">
                    <filter string="Check Balance" name="group_by_balance" context="{'group_by': 'check_balance'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_report_oob_jobsheet" model="ir.ui.view">
        <field name="name">res.partner.report.oob.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false" default_order="partner_id asc" expand="1">
                <field name="name" groups="odoo_timestead.group_jobsheet_manager"/>
                <field name="partner_id"/>
                <field name="planned_hours" string="Hours Paid" widget="timesheet_uom"/>
                <field name="effective_hours" string="Hours Consumed" widget="timesheet_uom"/>
                <field name="remaining_hours" string="Remaining Hours" widget="timesheet_uom" decoration-danger="progress &gt;= 100" decoration-warning="progress &gt;= 80 and progress &lt; 100"/>
                <field name="progress" invisible="1"/>
                <field name="jobsheet_type" invisible="1"/>
                <field name="check_balance" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_report_balance_jobsheets" model="ir.actions.act_window">
        <field name="name">Prepaid Balance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task</field>
        <field name="view_id" ref="view_report_oob_jobsheet"/>
        <field name="domain">[('jobsheet_type','=','prepaid')]</field>
        <field name="context">{'search_default_group_by_balance':1,'group_by_balance':1, 'expand': 1}</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_report_balance" model="ir.actions.client">
            <field name="name">Out of Balance Report</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'jobsheet.balance.report'}" />
        </record>

    <menuitem id="job_menu_reporting"
              name="Reporting"
              parent="menu_jobsheets"
              sequence="8"/>


    <menuitem id="job_menu__overtime_reporting"
              name="Overtime"
              action="action_report_jobsheets"
              parent="job_menu_reporting"
              sequence="1"/>

    <menuitem id="job_menu_oob_reporting"
              name="Out of Balance"
              action="action_report_balance_jobsheets"
              parent="job_menu_reporting"
              sequence="2"/>

    <menuitem id="job_menu_balance_reporting"
              name="Out of Balance Report"
              action="action_report_balance"
              parent="job_menu_reporting"
              sequence="3"/>

</odoo>