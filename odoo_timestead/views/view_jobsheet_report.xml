<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_report_jobsheet" model="ir.ui.view">
        <field name="name">client.jobsheet.report.tree</field>
        <field name="model">client.jobsheet</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="create_date" widget="date" options="{'format': 'dd/MM/yyyy'}"/>
                <field name="name"/>
                <field name="user_id" string="Employee"/>
                <field name="partner_id"/>
                <field name="effective_hours" string="Amount of Hours" widget="timesheet_uom" sum="Total Hours"/>
                <field name="overtime"/>
                <field name="hours_overtime" widget="timesheet_uom" sum="Total Overtime"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_report_jobsheets" model="ir.actions.act_window">
        <field name="name">Jobsheets Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">client.jobsheet</field>
        <field name="view_id" ref="view_report_jobsheet"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="job_menu_reporting"
              name="Reporting"
              action="action_report_jobsheets"
              groups="group_jobsheet_manager"
              parent="menu_jobsheets"
              sequence="8"/>

</odoo>