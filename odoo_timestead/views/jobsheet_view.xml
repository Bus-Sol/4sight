<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_jobsheet_filter" model="ir.ui.view">
            <field name="name">client.jobsheet.list.select</field>
            <field name="model">client.jobsheet</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <search string="Search Jobsheet">
                    <filter string="My Jobsheets" name="my_jobsheet" domain="[('user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Overtime" name="overtime" domain="[('overtime', '=', True)]"/>
                    <field name="name" string="Jobsheet Ref"/>
                    <field name="user_id"/>
                    <separator/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <separator/>
                    <field name="jobsheet_start"/>
                    <filter string="Jobsheet Start Date" name="filter_jobsheet_start" date="jobsheet_start"/>
                    <group expand="1" string="Group By">
                        <filter string="Customer" name="group_by_customer" context="{'group_by': 'partner_id'}"/>
                        <filter string="Technician" name="group_by_technicien" context="{'group_by': 'user_id'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                        <filter string="Jobsheet Type" name="group_by_type" context="{'group_by': 'type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_jobsheet_tree" model="ir.ui.view">
            <field name="name">client.jobsheet.tree</field>
            <field name="model">client.jobsheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="jobsheet_start"/>
                    <field name="name"/>
                    <field name="user_id" string="Technician"/>
                    <field name="brief"/>
                    <field name="partner_id"/>
                    <field name="task_id"/>
                    <field name="effective_hours" widget="timesheet_uom"/>
                    <field name="status" widget="badge" decoration-success="status == 'invoiced'"
                           decoration-danger="status in ['sent','signed']" decoration-info="status == 'created'"
                           optional="show"/>
                    <field name="company_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_client_jobsheet_form" model="ir.ui.view">
            <field name="name">client.jobsheet.form</field>
            <field name="model">client.jobsheet</field>
            <field name="arch" type="xml">
                <form string="JobSheet">
                    <header>
                        <button name="save" string="Save" special="save" class="oe_highlight"/>
                        <button name="action_create_invoice" string="Create Invoice"
                                groups="odoo_timestead.group_jobsheet_manager"
                                confirm="Are you sure you want to invoice this jobsheet?" type="object"
                                class="oe_highlight"
                                    invisible = "status =='invoices' or is_prepaid == True"
                        />
                        <!--                                attrs="{'invisible': ['|',('status', '=', 'invoiced'),('is_prepaid','=',True)]}"-->
                        <button name="mark_as_signed" string="Sign" type="object" class="oe_highlight"
                                invisible="status in ['signed','invoiced','confirmed']"
                        />
                        <!--                                attrs="{'invisible': [('status', 'in', ['signed','invoiced','confirmed'])]}"-->
                        <button name="action_jobsheet_send" string="Confirm by Email" type="object"
                                invisible="status != 'created'"
                        />
                        <!--                                attrs="{'invisible': [('status', '!=', 'created')]}"-->

                        <button name="action_jobsheet_confirm" string="Confirm" type="object" class="oe_highlight"
                                confirm="You are confirming without the customer signature"
                                invisible="status != 'created'"
                        />
<!--                                    attrs="{'invisible': [('status', '!=', 'created')]}"-->
                        <button name="action_send_copy" string="Send a Copy" type="object"
                                invisible="status == 'created'"
                        />
<!--                                                        attrs="{'invisible': [('status', '=', 'created')]}"-->
                        <button name="action_reset_tocreate" string="Unlock" type="object" class="oe_highlight"
                                groups="odoo_timestead.group_jobsheet_admin"
                                invisible="status == 'created'"
                        />
<!--                                                        attrs="{'invisible': [('status', '=', 'created')]}"-->
                        <field name="status" class="ml-4" widget="statusbar"
                               statusbar_visible="created,sent,signed,confirmed,invoiced"
                               readonly="1"/>
                    </header>
                    <sheet>
                        <field name="company_id" invisible="1"/>
                        <field name="user_id" invisible="1"/>
                        <field name="ticket_id" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="preview_jobsheet" type="object" class="oe_stat_button" icon="fa-globe icon">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Jobsheet</span>
                                    <span class="o_stat_text">Preview</span>
                                </div>
                            </button>
                            <button type="object" name="action_view_project_ids" class="oe_stat_button"
                                    icon="fa-puzzle-piece" string="Project"
                                    invisible="project_id == False"
                                    groups="project.group_project_manager"
                            >
<!--                                                                    attrs="{'invisible': [('project_id', '=', False)]}"-->
                                <field name="project_id" invisible="1"/>
                            </button>
                            <button type="object" name="action_view_task_id" class="oe_stat_button"
                                    icon="fa-tasks" string="Task"
                                    invisible="task_id == False"
                                    groups="project.group_project_manager">
<!--                                                                    attrs="{'invisible': [('task_id', '=', False)]}"-->
                                <field name="task_id" invisible="1"/>
                            </button>
                            <button name="action_view_invoice" type="object" class="oe_stat_button"
                                    icon="fa-pencil-square-o"
                                    invisible = "move_count == 0"
                                    groups="odoo_timestead.group_jobsheet_manager">
<!--                                                                    attrs="{'invisible': [('move_count', '=', 0)]}"-->
                                <field name="move_count" widget="statinfo" string="Invoices"/>
                                <field name='move_ids' invisible="1"/>
                            </button>
                        </div>
                        <h1>
                            <div class="col-md-6">
                                <field name="name"/>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <field name="service_domain" invisible="1"/>
                                <field name="jobsheet_start" invisible="1"/>
                                <field name="partner_id" widget="res_partner_many2one" required="1"
                                       readonly="status != 'created'"
                                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                       options="{'always_reload': True,'no_create_edit': True, 'no_create': True}"/>
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                <field name="service_id" options="{'no_create_edit': True, 'no_create': True}"
                                       readonly="status != 'created'"
                                       required="1"/>
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                <field name="is_prepaid" invisible="1"/>
                                <label for="start_date" string="Planned Date"/>
                                <div class="w-100">
                                    <div class="o_row">
                                        <field name="start_date" widget="daterange" required="1"
                                               readonly="status != 'created'"
                                               options='{"related_end_date": "end_date"}'/>
<!--                                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                        <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon"
                                           title="Arrow"/>
                                        <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon"
                                           title="Arrow"
                                           invisible = "start_date == False or end_date == False"
                                        />
<!--                                                                                   attrs="{'invisible': [('start_date', '=', False), ('end_date', '=', False)]}"-->
                                        <field name="end_date" widget="daterange" required="1"
                                               readonly="status != 'created'"
                                               options='{"related_start_date": "start_date"}'/>
<!--                                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                    </div>
                                </div>
                                <field name="category_id" widget="many2many_tags"
                                       options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags..."
                                       readonly="status != 'created'"
                                />
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                            </group>
                            <group>
                                <field name="date_order" invisible="1"/>
                                <field name="jobsheet_type_id"
                                       readonly="status != 'created'"
                                />
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                <field name="brief" required="1"
                                       readonly="status != 'created'"
                                />
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                <label for="type" string="Jobsheet Type"/>
                                <div name="type" class="o_row">
                                    <field name="type" force_save="1"/>
<!--                                         attrs="{'invisible': [('type', '=', 'prepaid')]}"-->
                                    <div class="o_row oe_inline"
                                         invisible="type == 'prepaid'"
                                    >
                                        Tick for Out of Contract
                                        <field name="tick_postpaid"
                                               readonly="status != 'created'"
                                        />
<!--                                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                    </div>
                                </div>
                                <label for="overtime" string="Overtime"/>
                                <div name="overtime" class="o_row">
                                    <field name="overtime"
                                           readonly="status != 'created'"
                                    />
<!--                                                                               attrs="{'readonly': [('status', '!=', 'created')]}"-->
<!--                                                                             attrs="{'invisible': [('overtime', '=', False)]}"-->
<!--                                                                                   attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                    <div class="o_row oe_inline"
                                         invisible="overtime == False"
                                    >
                                        Please insert your overtime hours
                                        <field name="hours_overtime" class="oe_inline" widget="timesheet_uom"
                                               readonly="status != 'created'"
                                        />
                                    </div>
                                </div>
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')], 'invisible': [('type', '!=', 'prepaid')]}"-->
                                <field name="sale_order_id" groups="odoo_timestead.group_jobsheet_manager"
                                       readonly="status != 'created'"
                                       invisible="type != 'prepaid'"
                                />
                            </group>
                        </group>
                        <group>
<!--                                                               attrs="{'readonly': [('status', '!=', 'created')]}"-->
                            <field name="details"
                                   readonly="status != 'created'"
                                   required="1"
                                   widget="html"
                            />
                            <field name="url_detail" widget="url"/>
                            <field name="invoice_amount" groups="odoo_timestead.group_jobsheet_manager"/>
                        </group>

                        <notebook>
<!--                                                              attrs="{'readonly': [('status', '!=', 'created')]}"-->
                            <page string="Signature" name="signature"
                                  readonly = "status != 'created'"
                            >
                                <group>
                                    <group>
<!--                                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                        <field name="hours" string="Time (Hrs)"
                                               readonly="status != 'created'"
                                        />
<!--                                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                        <field name="signee" placeholder="Name of Signee"
                                               readonly="status != 'created'"
                                        />
<!--                                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                        <field name="signature" widget="signature"
                                               readonly="status != 'created'"
                                        />
<!--                                                                                        attrs="{'invisible': [('status', 'in', ['signed','invoiced','confirmed'])]}"-->
                                        <button name="mark_as_signed" string="Sign" type="object"
                                                invisible="status in ['signed','invoiced','confirmed']"
                                        />
                                    </group>
                                </group>
                            </page>
                            <page string="Timesheets" id="timesheets_tab">
<!--                                                                        attrs="{'invisible': [('type', 'in', )]}"-->
                                <group
                                        invisible="type in ['postpaid','contract']"
                                >
                                    <group>
                                        <div class="o_td_label">
                                            <label for="planned_hours" string="Initially Planned Hours"/>
                                        </div>
                                        <field name="planned_hours" widget="timesheet_uom_no_toggle" nolabel="1"/>
                                    </group>
                                    <group>
                                        <field name="progress" widget="progressbar"/>
                                    </group>
                                </group>
<!--                                                                       attrs="{'readonly': [('status', '!=', 'created')]}"-->
                                <field name="timesheet_ids" mode="tree,kanban"
                                       readonly="status != 'created'"
                                >
                                    <tree create="0" string="Timesheet Activities" default_order="date">
                                        <field name="date"/>
                                        <field name="user_id" invisible="1"/>
                                        <field name="employee_id" required="1" widget="many2one_avatar_employee"/>
                                        <field name="name" required="0"/>
                                        <field name="unit_amount" widget="timesheet_uom"
                                               decoration-danger="unit_amount &gt; 24"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" name="project_hours">
                                    <span>
                                        <label class="font-weight-bold" for="effective_hours" string="Hours Spent"/>
                                    </span>
                                    <field name="effective_hours" nolabel="1" widget="timesheet_uom"/>
                                    <span>
<!--                                                                                       attrs="{'invisible': [('planned_hours', '=', 0.0)]}"-->
                                        <label class="font-weight-bold" for="remaining_hours" string="Remaining Hours"
                                               invisible = "planned_hours == 0.0"
                                        />
                                    </span>
<!--                                                                               attrs="{'invisible' : [('planned_hours', '=', 0.0)]}"-->
                                    <field name="remaining_hours" widget="timesheet_uom"
                                           class="oe_subtotal_footer_separator"
                                           invisible = "planned_hours == 0.0"
                                           nolabel="1"
                                    />
                                </group>
                            </page>
                            <page string="Items" name="items_line">
                                <field
                                        name="jobsheet_line"
                                        mode="tree,kanban"
                                >
                                    <tree
                                            string="Item Details"
                                            editable="bottom"
                                    >
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="price_unit"/>
                                    </tree>
                                    <kanban class="o_kanban_mobile">
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="price_unit"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ record.display_type.raw_value ? 'o_is_' + record.display_type.raw_value : '' }}">
                                                    <t t-if="!record.display_type.raw_value">
                                                        <div class="row">
                                                            <div class="col-8">
                                                                <strong>
                                                                    <span>
                                                                        <t t-esc="record.product_id.value"/>
                                                                    </span>
                                                                </strong>
                                                            </div>
                                                            <div class="col-4">
                                                                <strong>
                                                                    <span class="float-right text-right">
                                                                        <t t-esc="record.price_unit.value"/>
                                                                    </span>
                                                                </strong>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 text-muted">
                                                                <span>
                                                                    Quantity:
                                                                    <t t-esc="record.product_uom_qty.value"/>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 text-muted">
                                                                <span>
                                                                    Unit Price:
                                                                    <t t-esc="record.price_unit.value"/>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                    <form string="Item Details">
                                        <group>
                                            <field name="product_id"/>
                                            <field name="product_uom_qty"/>
                                            <field name="price_unit"/>
                                        </group>
                                    </form>
                                </field>
                                <group name="note_group" col="6">
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <label for="amount_total"/>
                                        <field name="amount_total" nolabel="1"
                                               widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>
                            </page>
                            <page string="Project" name="job_project">
                                <group>
                                    <group>
                                        <field name="project_id" readonly="1" force_save="1"/>
                                        <field name="task_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'open_attachments': True}"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>


            </field>
        </record>

        <record id="view_jobsheet_pivot" model="ir.ui.view">
            <field name="name">client.jobsheet.pivot</field>
            <field name="model">client.jobsheet</field>
            <field name="arch" type="xml">
                <pivot string="Jobsheets" sample="1">
                    <field name="date_order" type="row"/>
                    <field name="hours" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_jobsheet_activity" model="ir.ui.view">
            <field name="name">client.jobsheet.activity</field>
            <field name="model">client.jobsheet</field>
            <field name="arch" type="xml">
                <activity string="Jobsheets">
                    <templates>
                        <div t-name="activity-box">
                            <div>
                                <field name="name" display="full"/>
                                <field name="partner_id" muted="1" display="full"/>
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>

        <record id="action_jobsheets" model="ir.actions.act_window">
            <field name="name">Jobsheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">client.jobsheet</field>
            <field name="view_mode">tree,form,pivot,activity</field>
            <field name="view_id" ref="view_jobsheet_tree"/>
            <field name="search_view_id" ref="view_jobsheet_filter"/>
            <field name="context">{'search_default_my_jobsheet': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Jobsheet
                </p>
            </field>
        </record>

        <record id="action_jobsheets_customer" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="context">{'default_is_company': True}</field>
            <field name="domain">[('jobsheet_type', '!=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a contact in your address book
                </p>
                <p>
                    Odoo helps you to easily track all activities related to a customer.
                </p>
            </field>
        </record>

        <record id="services_template_action" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="product.product_template_search_view"/>
            <field name="domain">[('type', '=', 'service')]</field>
            <field name="context">{'default_type': 'service'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Service found. Let's create one!
                </p>
            </field>
        </record>

        <record id="view_jobsheet_tags_form" model="ir.ui.view">
            <field name="name">Jobsheet Tags</field>
            <field name="model">jobsheet.tags</field>
            <field name="arch" type="xml">
                <form string="Jobsheet Tag">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_jobsheet_tags_list" model="ir.ui.view">
            <field name="name">Jobsheet Tags</field>
            <field name="model">jobsheet.tags</field>
            <field eval="6" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Jobsheet Tags">
                    <field name="display_name"/>
                </tree>
            </field>
        </record>

        <record id="action_tags" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">jobsheet.tags</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Tags for Jobsheet
                </p>
            </field>
        </record>

    <!-- ++++++++++++++++++++++ Settings actions ++++++++++++++++++++++ -->
        <record id="res_config_settings_action_job" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'odoo_timestead', 'bin_size': False}</field>
        </record>

    <!-- ++++++++++++++++++++++ Dashboard section ++++++++++++++++++++++ -->
        <record id="jobsheet_view_graph" model="ir.ui.view">
            <field name="name">client.jobsheet.graph.view</field>
            <field name="model">client.jobsheet</field>
            <field name="arch" type="xml">
                <graph string="Jobsheet Statistics" type="bar" sample="1">
                    <field name="jobsheet_start" interval="month" type="row"/>
                    <field name="effective_hours" type="measure"/>
                </graph>
            </field>
        </record>

