<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.jobsheet</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority" eval="75"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="jobsheet" string="Jobsheet" data-key="odoo_timestead"
                         groups="base.group_system">
                        <h2>Jobsheet</h2>
                        <div class="row mt16 o_settings_container" id="jobsheet_management">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="inv_after_sign"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="inv_after_sign"/>
                                    <div class="text-muted">
                                        By default jobsheets could be invoiced directly without signature, activate this
                                        feature in order to restrict invoicing on signed jobsheets only.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="jobsheet_manager"/>
                                    <div class="text-muted"/>
                                    <field name="jobsheet_manager"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
