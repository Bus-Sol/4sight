<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_team_view_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.team.form.inherit</field>
        <field name="model">helpdesk.team</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='productivity']" position="after">
                <div class="row mt16 o_settings_container" id="productivity">
                    <div class="offset-lg-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="hide_from_portal"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="hide_from_portal"/>
                            <div class="text-muted">
                                Hide this team from ticket list on portal.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>