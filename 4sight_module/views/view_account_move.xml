<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="foursight_module_view_move_form">
        <field name="name">foursight.module.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <label for="tax_closing_date_from" string="Tax Closing Date"/>
                <div class="w-100" attrs="{'invisible': [('tax_closing_date_from', '=', False), ('tax_closing_date_to', '=', False)]}">
                    <div class="o_row">
                        <field name="tax_closing_date_from" widget="daterange"
                               options='{"related_end_date": "tax_closing_date_to"}'/>
                        <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon"
                           title="Arrow"/>
                        <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon"
                           title="Arrow"/>
                        <field name="tax_closing_date_to" widget="daterange" required="1"
                               options='{"related_start_date": "tax_closing_date_from"}'/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>