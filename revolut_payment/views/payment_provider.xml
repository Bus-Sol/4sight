<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Revolut Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'revolut'">
                    <field name="revolut_merchant_api_public" required="code == 'revolut' and state != 'disabled'"/>
                    <field name="revolut_merchant_api_secret" required="code == 'revolut' and state != 'disabled'" password="True"/>
                </group>
            </group>
        </field>
    </record>
</odoo>