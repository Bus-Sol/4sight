<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="shireburn_view_move_form">
        <field name="name">shireburn.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="is_payroll" />
            </field>
            <xpath expr="//field[@name='line_ids']" position="after">
                <button name="action_load_payroll_accounts" type="object" string="Payroll Accounts" class="oe_stat_button" attrs="{'invisible': [('is_payroll', '=', False)]}">
                </button>
            </xpath>
        </field>
    </record>

</odoo>
